{
  "compilerOptions": {
    "watch": true,
    "strict": true,
    "module": "ES2020",
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "build",
    "allowJs": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
  },
  "include": [
    "client",
    "server"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
